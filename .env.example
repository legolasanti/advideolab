# Backend
NODE_ENV=development
PORT=4000
DATABASE_URL=postgresql://app:app@localhost:5432/app?schema=public
JWT_SECRET=replace-with-long-secret
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=assets
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
PUBLIC_CDN_BASE=http://localhost:9000/assets
API_PUBLIC_URL=https://api.example.com
COMPOSE_SERVICE_URL=http://localhost:7000/compose
USE_CLOUDINARY=false
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
N8N_SYNC=false
N8N_WEBHOOK_URL=http://localhost:5678/webhook/ugc/generate-video # n8n webhook that triggers Sora-2
N8N_INTERNAL_TOKEN=replace-with-strong-shared-secret             # 32+ chars; shared secret for n8n -> backend callbacks
ENCRYPTION_KEY=12345678901234567890123456789012
OUTPUT_DOWNLOAD_HOST_ALLOWLIST=                               # optional, comma-separated (e.g. cdn.example.com,*.cloudinary.com)
ALLOWED_ORIGINS=http://localhost:4173                         # comma-separated allowlist (prod); defaults to WEB_BASE_URL origin
TRUST_PROXY=0                                                 # set to 1 behind a single reverse proxy (recommended in prod)
BLOG_PREVIEW_TOKEN=                                           # optional: 32+ chars; enables draft preview via /api/public/blog/:slug?previewToken=...

# Frontend
VITE_API_BASE=/api
VITE_SITE_URL=https://example.com
